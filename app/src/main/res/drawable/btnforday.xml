<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <solid android:color="#c1131d8b"/>
            <stroke
                android:width="3dip"
                android:color="#ff450c"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="500dp"/>
            <solid android:color="#08fa3c"/>
            <stroke
                android:width="3dip"
                android:color="#ff0818"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
        </shape>
    </item>

</selector>
